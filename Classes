class Animal {
  constructor(name, sound) {
    this.name = name;
    this.sound = sound;
  }

  makeSound() {
    console.log(`${this.name} says ${this.sound}`);
  }
}

// Creating an instance of the Animal class
const cat = new Animal('Cat', 'Meow');

// Calling a method on the instance
cat.makeSound(); // Output: Cat says Meow

